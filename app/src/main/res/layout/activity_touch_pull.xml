<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_container"
    tools:context=".ui.viewtest.TouchPullActivity">

    <com.angle.hshb.customviewdemo.view.TouchPullView
        android:id="@+id/touchPull"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:pColor="@color/colorAccent"
        app:pCenterDrawable="@drawable/ic_draw_circle"
        app:pCenterDrawableMargin="2dp"
        app:pDragHeight="140dp"
        app:pRadius="20dp"
        app:pTangentAngle="110"
        app:pTargetGravityHeight="4dp"
        app:pTargetWidth="200dp"
        />

</RelativeLayout>